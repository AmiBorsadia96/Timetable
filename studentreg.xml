<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="155dp"
        android:layout_height="152dp"
        android:src="@drawable/student"
        android:id="@+id/imgstu"
        android:layout_gravity="center"></ImageView>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Student Registration"
    android:fontFamily="cursive"
    android:layout_gravity="center"
    android:id="@+id/txtstulabel"
    android:textSize="25dp"
    ></TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        >
        <TextView
            android:id="@+id/txtnm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:text="Name:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etxtnm"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:ems="20" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/txtenroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:text="Enroll no:"
        android:textSize="20dp" />

        <EditText
            android:id="@+id/etxteno"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtsem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:text="Sem:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etxtsem"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="20dp"
            android:ems="20"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtdiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:text="Division:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etxtdiv"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:ems="20"></EditText>
    </LinearLayout>
  <Button
      android:layout_width="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_height="wrap_content"
      android:text="Submit"
      android:layout_gravity="center"
      android:id="@+id/button"></Button>
</LinearLayout>